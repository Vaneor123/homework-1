using System.Security.AccessControl;
using System.Security.Claims;

internal class Program
{

    static int sh(int a)
    {
        if (a % 5 == 0)
        {
            return a / 5;
        }
        else
        {
            return a += 1;
        }
    }
    private static void Main(string[] args)
    {

        
        int x = Convert.ToInt32(Console.ReadLine());

        Console.WriteLine(sh(x));
}
}
